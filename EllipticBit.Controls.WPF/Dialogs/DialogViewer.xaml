<UserControl x:Class="EllipticBit.Controls.WPF.Dialogs.DialogViewer"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 DataContext="{Binding RelativeSource={RelativeSource Self}}"
			 Visibility="Collapsed"
			 mc:Ignorable="d" d:DesignHeight="900" d:DesignWidth="900">
	<Border Background="#66000000" IsHitTestVisible="True" >
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Border Background="#FF222222"  Grid.Row="1" >
				<ContentPresenter Content="{Binding Path=ActiveDialog}" Margin="0" />
			</Border>
		</Grid>
	</Border>
</UserControl>